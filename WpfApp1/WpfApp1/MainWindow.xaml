<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="text" Margin="0,30,0,0.5" TextWrapping="Wrap" AcceptsReturn="True"/>
        <ComboBox x:Name="font" HorizontalAlignment="Left" VerticalAlignment="Top" Width="124" Height="30" SelectionChanged="font_SelectionChanged">
            <ComboBoxItem Content="Segoe UI" HorizontalAlignment="Left" Width="122"/>
            <ComboBoxItem Content="Arial" HorizontalAlignment="Left" Width="122" FontFamily="Arial"/>
            <ComboBoxItem Content="Courier New" HorizontalAlignment="Left" Width="122" FontFamily="Courier New"/>
        </ComboBox>
    </Grid>
</Window>
